        "GroupId": {
          "Ref": "sgDMSMigrationsmyVPCSecurityGroup109KD2HOVAEU2"
        },
        "IpProtocol": "-1"
      },
      "Type": "AWS::EC2::SecurityGroupEgress"
    },
    "ingress1": {
      "Properties": {
        "CidrIp": "10.0.0.0/24",
